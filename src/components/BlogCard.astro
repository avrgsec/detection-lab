---
interface Props {
  title: string;
  description: string;
  date: Date;
  tags?: string[];
  slug: string;
  readingTime?: number;
}

const { title, description, date, tags = [], slug, readingTime } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
}).format(date);
---

<a href={`/blog/${slug}`} class="block group">
  <div class="bg-bg-secondary border border-border rounded-lg p-6 hover:border-accent transition-all duration-300 h-full flex flex-col">
    <h3 class="text-xl font-light mb-2 group-hover:text-accent transition-colors">
      {title}
    </h3>
    
    <p class="text-text-secondary text-sm mb-4 flex-grow">
      {description}
    </p>
    
    <div class="flex items-center justify-between text-xs text-text-secondary">
      <div class="flex items-center gap-3">
        <span>{formattedDate}</span>
        {readingTime && <span>{readingTime} min read</span>}
      </div>
    </div>
    
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-4">
        {tags.map(tag => (
          <span class="text-xs px-2 py-1 bg-bg-primary border border-border rounded">
            #{tag}
          </span>
        ))}
      </div>
    )}
  </div>
</a>
